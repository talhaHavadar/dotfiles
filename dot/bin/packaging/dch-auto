#!/usr/bin/env bash
set -e

BASE_VERSION="$(dpkg-parsechangelog -S Version | sed 's/~git.*//')"
VERSION="${BASE_VERSION}~git$(date +%Y%m%d%H%M).$(git rev-parse --short HEAD)"

# Directly replace version in first line of changelog
sed -i "1s/([^)]*)/($VERSION)/" debian/changelog

# Append auto build entry to existing stanza
dch -a "Auto build."
